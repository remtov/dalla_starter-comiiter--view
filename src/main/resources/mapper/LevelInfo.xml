<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SQL.SIGNUP">
<select id ="selectSignUp" resultType="su">
select * from ko_kim_signup 

 order by SignNum
</select>
<select id="selectone" resultType="su">
select * from ko_kim_signup
<where>
	signNum = #{signNum}
</where>
</select>
  <insert id="insertSignUp" parameterType="su">
    INSERT INTO ko_kim_signup(signupnum,signupname,signupid,signuppassword,signupemail,signupnickname,signuppersonallity,signupphone,signupdate,signupconcern)
	VALUES(seq_signupnum.nextval,#{signupname},#{signupid},#{signuppassword},#{signupemail},#{signupnickname},#{signuppersonallity},#{signupphone},#{signupdate},#{signupconcern},)
  </insert>
  <update id="updateSignUp" parameterType="su">
  update ko_kim_signup
  <set>

  	<if test="lilevel!=null">signupname=#{signupname},</if>
  	<if test="liname!=null">signupid=#{signupid},</if>
  	<if test="lidesc!=null">signuppassword=#{signuppassword},</if>
  	<if test="lidesc!=null">signupemail=#{signupemail},</if>
  	<if test="lidesc!=null">signupnickname=#{signupnickname},</if>
  	<if test="lidesc!=null">signuppersonallity=#{signuppersonallity},</if>
  	<if test="lidesc!=null">signupphone=#{signupphone},</if>
  	<if test="lidesc!=null">signupdate=#{signupdate},</if>
  	<if test="lidesc!=null">signupconcern=#{signupconcern},</if> 
  </set>
	where signupnum=#{signupnum}
  </update>
  <delete id="deleteSignUp" parameterType="su">
  delete from ko_kim_signup where signupname=#{signupname}
  </delete>
</mapper>
